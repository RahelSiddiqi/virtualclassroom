@model SDQWeb.Models.Student

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="align-content:center;">
    <h4>Create Your Student Profile</h4>
    <img src="~/Image/student.gif" alt="Alternate Text"  width="963" />
    <hr />
    @{ int id = Convert.ToInt16(Session["id"]);
        string date = DateTime.Now.ToShortDateString();
    }
    <input type="hidden" name="UserId" value="@id" />
    <input type="hidden" name="Started" value="@date" />
    <div class="alert-danger">
          <p>@ViewBag.ErrMsg</p>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Start Process" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
