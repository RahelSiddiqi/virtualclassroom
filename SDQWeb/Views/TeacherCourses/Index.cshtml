@model IEnumerable<SDQWeb.Models.TeacherCourse>

@{
    ViewBag.Title = "Index";
}

<h2>Your Courses</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Coursse.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.TeacherId == Convert.ToInt32(Session["TeacherId"]))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Coursse.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
    
}

</table>
