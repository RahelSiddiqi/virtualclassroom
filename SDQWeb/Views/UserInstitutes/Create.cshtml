@model SDQWeb.Models.UserInstitute

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select Your Institute You are Currently Working</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.InstituteId, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InstituteId", null, "Select Instute", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InstituteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Conferm Institute" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <p>Dont Have Your Institute? Register Your Institute Please</p>@Html.ActionLink("Create New Institute", "Create", new {Controller ="Institutes", Action="Create"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
